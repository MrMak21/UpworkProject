<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/gradient_color_bg"
    app:contentInsetEnd="@dimen/common_zero_dp"
    app:contentInsetLeft="@dimen/common_zero_dp"
    app:contentInsetRight="@dimen/common_zero_dp"
    app:contentInsetStart="@dimen/common_zero_dp"
    android:gravity="bottom">



<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/gradient_color_bg"
    app:contentInsetEnd="@dimen/common_zero_dp"
    app:contentInsetLeft="@dimen/common_zero_dp"
    app:contentInsetRight="@dimen/common_zero_dp"
    app:contentInsetStart="@dimen/common_zero_dp"
    app:titleTextColor="@android:color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbarBackImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:paddingStart="@dimen/common_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/common_50dp"
            android:layout_marginEnd="@dimen/common_50dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="@dimen/common_text_20sp"
            android:textColor="@color/white"
            tools:text="Toolbar title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>